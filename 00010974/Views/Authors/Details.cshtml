@model Authors

@{
    ViewData["Title"] = "Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>@Model.FullName Details</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                    <div class="form-group text-center">
                        <img id="AuthorPicturePreview" class="border-dark rounded" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorPicture" class="control-label"></label>
                        <input asp-for="AuthorPicture" class="form-control" readonly/>
                        <span asp-validation-for="AuthorPicture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorBooks" class="control-label"></label>
                    <input asp-for="AuthorBooks" class="form-control" readonly />
                        <span asp-validation-for="AuthorBooks" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-outline-primary float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('AuthorPicturePreview');
            output.src = $("#AuthorPicture").val();
        })
    </script>
}


