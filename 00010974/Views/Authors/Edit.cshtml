@model Authors

@{
    ViewData["Title"] = "edit author";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="AuthorPicturePreview" class="border-dark rounded" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorPicture" class="control-label"></label>
                        <input asp-for="AuthorPicture" class="form-control" />
                        <span asp-validation-for="AuthorPicture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorBooks" class="control-label"></label>
                        <input asp-for="AuthorBooks" class="form-control" />
                        <span asp-validation-for="AuthorBooks" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('AuthorPicturePreview');
            output.src = $("#AuthorPicture").val();
        })

        $("#AuthorPicture").on("change", function () {
            var output = document.getElementById('AuthorPicturePreview');
            output.src = $(this).val();
        })
    </script>
}

