@using _00010974.Data.Enums
@model Books


@{
    ViewData["Title"] = "Create a new book";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new book</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-4 offset-4 text-center">
                                <img id="ImgUrlPreview" class="border-dark rounded" style="max-width: 150px" />
                            </div>
                            <div class="form-group">
                                <label asp-for="ImgUrl" class="control-label"></label>
                                <input asp-for="ImgUrl" class="form-control" />
                                <span asp-validation-for="ImgUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AuthorName" class="control-label"></label>
                                <input asp-for="AuthorName" class="form-control" />
                                <span asp-validation-for="AuthorName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PublishingHouse" class="control-label"></label>
                                <input asp-for="PublishingHouse" class="form-control" />
                                <span asp-validation-for="PublishingHouse" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Series" class="control-label"></label>
                                <select asp-for="Series" class="form-control" asp-items="Html.GetEnumSelectList<Series>()"></select>
                                <span asp-validation-for="Series" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Genre" class="control-label"></label>
                                <select asp-for="Genre" class="form-control" asp-items="Html.GetEnumSelectList<Genre>()"></select>
                                <span asp-validation-for="Genre" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <a class="btn btn-outline-primary float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>


            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $("#ImgUrl").on("change", function () {
            var output = document.getElementById("ImgUrlPreview");
            output.src = $(this).val();
        })
    </script>
}