@model IEnumerable<Books>

@{
    ViewData["Title"] = "List of books";
}

<h1>Books</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-12 rounded md-3">
                    <div class="card mb-3" style="max-width: 500px;">
                        <div class="row">
                            <div class="col-md-12">
                        <div class="card-header text-white bg-dark" style="padding: 0.25rem 1.25rem;">
                                    <p class="card-text">
                                        <h5 class="card-title">
                                            @item.Title
                                        </h5>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6 rounded">
                                <img src="@item.ImgUrl" width="100%" alt="@item.Title">
                            </div>  

                            <div class="col-md-6">
                                <div class="card-body" style="padding: 0.55rem;">
                                    <p class="card-text"><b>Author Name: </b>@item.AuthorName</p>
                                    <p class="card-text"><b>Genre: </b>@item.Genre</p>
                                <p class="card-text"><b>Series: </b>@item.Series</p>
                                <p class="card-text"><b>Publisher: </b>@item.PublishingHouse</p>
                        <p class="card-text"><b>Price: </b>@item.Price.ToString("c")</p>

                    </div>
                            </div>
                            <div class="col-md-12">
                                <div class="card-footer ">
                                    <p class="card-text">
                                        <a class="btn btn-outline-secondary float-right" asp-action="Details" asp-route-id="@item.Id">Show Details
                                        </a>
                                        <a class="btn btn-success text-white"
                                           asp-controller="Orders"
                                           asp-action="AddItemToShoppingCart"
                                           asp-route-id="@item.Id">
                                            Add to Cart
                                        </a>
                                <a class=" btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id"> Edit </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            
    }
</div>
@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ImgUrl');
            output.src = $("#ImgUrl").val();
        })

        $("#ImgUrl").on("change", function () {
            var output = document.getElementById('ImgUrl');
            output.src = $(this).val();
        })
    </script>
}